<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:background="@color/purple_200">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:contentDescription="@string/todo" />
        <TextView
            android:id="@+id/titlebutton"
            android:layout_marginStart="150dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/new_task"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/submit_button"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_check_24"
            android:padding="10dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/todo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/titletextid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:autofillHints="write title" />
        <EditText
            android:id="@+id/notetextid"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/titletextid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:hint="@string/note"
            android:autofillHints="write note" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Spinner
            android:id="@+id/spinnerid"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1.5"/>
        <CheckBox
            android:id="@+id/ringid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/ringing"
            android:textColor="@color/white"
            android:layout_weight="1"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/vibretion"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/dateid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/1/2022"
            android:padding="15dp"
            android:backgroundTint="@color/black"
            android:layout_weight="1"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "/>

        <Button
            android:id="@+id/timeid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.23"
            android:padding="15dp"
            android:backgroundTint="@color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_weight="1"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/cancelbuttonid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/teal_700"
            android:padding="20dp"
            android:text="Cancel"
           android:contentDescription="@string/todo" />


    </RelativeLayout>





</LinearLayout>