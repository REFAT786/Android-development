<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity">

    <TextView
        android:id="@+id/name_textView_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="144dp"
        android:text="Name : "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name_editView_id"
        android:layout_width="272dp"
        android:layout_height="40dp"
        android:layout_marginTop="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toEndOf="@+id/name_textView_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email_textView_id3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Email : "
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/name_textView_id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/name_textView_id"
        app:layout_constraintTop_toBottomOf="@+id/name_textView_id" />

    <EditText
        android:id="@+id/email_editView_id"
        android:layout_width="272dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/name_editView_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name_editView_id"
        app:layout_constraintTop_toBottomOf="@+id/name_editView_id" />

    <TextView
        android:id="@+id/phone_textView_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Phone : "
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/email_textView_id3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/email_textView_id3"
        app:layout_constraintTop_toBottomOf="@+id/email_textView_id3" />

    <EditText
        android:id="@+id/phone_editView_id"
        android:layout_width="272dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/email_editView_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_editView_id"
        app:layout_constraintTop_toBottomOf="@+id/email_editView_id" />

    <Button
        android:id="@+id/add_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_editView_id"
        app:layout_constraintVertical_bias="0.018"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>