<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:focusableInTouchMode="false"
        android:id="@+id/editText_id"
        android:layout_width="355dp"
        android:layout_height="81dp"
        android:layout_marginTop="97dp"
        android:layout_marginBottom="38dp"
        android:hint="set time"
        android:padding="20dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/startButton_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startButton_id"
        android:layout_width="269dp"
        android:layout_height="80dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="159dp"
        android:padding="10dp"
        android:text="Notification Start"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_id"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/stopButton_id"
        android:layout_width="266dp"
        android:layout_height="77dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="302dp"
        android:padding="10dp"
        android:text="Notification Stop"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/startButton_id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/startButton_id"
        app:layout_constraintTop_toBottomOf="@+id/startButton_id"
        app:layout_constraintVertical_bias="0.015" />
</androidx.constraintlayout.widget.ConstraintLayout>